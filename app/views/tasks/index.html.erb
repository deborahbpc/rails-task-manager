<h1>My tasks</h1>

<p>
  <% @tasks.each do |task| %>
    <p>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </p>
  <% end %>
</p>

