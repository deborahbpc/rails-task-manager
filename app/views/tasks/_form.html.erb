<%= form_for(task) do |form| %>

  <p>
  <%= form.label :title %>
  <%= form.text_field :title %>
  </p>

  <p>
  <%= form.label :details %>
  <%= form.text_field :details %>
  </p>

  <% if !task.new_record? %>
    <p>
    <%= form.label :completed %>
    <%= form.check_box :completed %>
    </p>
  <% end %>

  <p>
  <%= form.submit %>
  </p>

<% end %>